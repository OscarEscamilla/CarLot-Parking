<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_pyment"
    android:layout_height="match_parent"
    tools:context=".Views.PaymentActivity">

    <Toolbar
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:title="Reserva"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </Toolbar>


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:elevation="4dp"
            app:cardCornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:src="@drawable/credit" />

                <Button
                    android:id="@+id/btn_scan"
                    android:text="Scan card"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/outlinebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                </Button>

                <EditText
                    android:layout_marginTop="10dp"
                    android:hint="Numero de tarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
                <EditText
                    android:layout_marginTop="5dp"
                    android:hint="Nombre del titular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="MM/YY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                    <EditText
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="CVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </EditText>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_confimar"
                    android:layout_marginTop="20dp"
                    android:text="CONFIRMAR"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>

        </androidx.cardview.widget.CardView>





    </LinearLayout>

</LinearLayout>